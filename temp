/* On mouse-over, add a grey background color */
.visite_jadwal_visite_list_kondisi:hover input ~ .visite_jadwal_visite_list_kondisi_checkmark {
    background-color: #ccc;
  }
  
  /* When the checkbox is checked, add a blue background */
  .visite_jadwal_visite_list_kondisi input:checked ~ .visite_jadwal_visite_list_kondisi_checkmark {
    background-color: #2196F3;
  }
  
  /* Create the checkmark/indicator (hidden when not checked) */
  .visite_jadwal_visite_list_kondisi_checkmark:after {
    content: "";
    position: absolute;
    display: none;
  }
  
  /* Show the checkmark when checked */
  .visite_jadwal_visite_list_kondisi input:checked ~ .visite_jadwal_visite_list_kondisi_checkmark:after {
    display: block;
  }
  
  /* Style the checkmark/indicator */
  .visite_jadwal_visite_list_kondisi .visite_jadwal_visite_list_kondisi_checkmark:after {
    left: 9px;
    top: 5px;
    width: 5px;
    height: 10px;
    border: solid white;
    border-width: 0 3px 3px 0;
    -webkit-transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    transform: rotate(45deg);
  }


